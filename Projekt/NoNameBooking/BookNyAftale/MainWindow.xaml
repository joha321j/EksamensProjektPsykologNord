<Window x:Class="BookNyAftale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookNyAftale"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080"
         WindowState="Maximized">
    <Grid>
        <Label Content="Opret aftale" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="22"/>
        <DatePicker x:Name="dpAppointmentDate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,125,0,0" FirstDayOfWeek="Monday" SelectedDateFormat="Short"/>
        <Label Content="Vælg dato og  tidspunkt:" HorizontalAlignment="Left" Margin="150,96,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbAppointmentTime" HorizontalAlignment="Left" Margin="257,127,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbClient" HorizontalAlignment="Left" Margin="150,250,0,0" VerticalAlignment="Top" Width="449"/>
        <Label Content="Vælg klient:" HorizontalAlignment="Left" Margin="150,219,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddClient" Content="Button" HorizontalAlignment="Left" Margin="616,250,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
