<Window x:Class="BookNyAftale.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookNyAftale"
        mc:Ignorable="d"
        Title="Kalender" Height="720" Width="1080"
         WindowState="Maximized">
    <Grid>
        <DataGrid Name="grCalendar" HorizontalAlignment="Center" Height="463" Margin="10,216,10,0" VerticalAlignment="Top" Width="1052">
            <DataGrid.RowHeaderStyle>
            <Style TargetType="{x:Type DataGridRowHeader}">
                <Setter Property="Content" Value="{Binding  RelativeSource={RelativeSource AncestorType={x:Type DataGrid}},Path=Columns[0].Header,Mode=OneTime}"/>
            </Style>
            </DataGrid.RowHeaderStyle>
        </DataGrid>
    </Grid>
</Window>
